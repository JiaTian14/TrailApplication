@{
    ViewData["Title"] = "Activity Trail";
}
<h1>@ViewData["Title"]</h1>
<form action="/Login" method="post">
    <label for="trail_id">Trail ID:</label>
    <input type="text" id="trail_id" name="trail_id" required>
    <br>
    <label for="date">Date:</label>
    <input type="date" id="date" name="date" required>
    <br>
    <label for="distance">Distance (km):</label>
    <input type="number" id="distance" name="distance" step="0.01" required>
    <br>
    <label for="time">Time:</label>
    <input type="time" id="time" name="time" required>
    <br>
    <label for="rating">Rating:</label>
    <input type="number" id="rating" name="rating" min="1" max="5" required>
    <br>
    <label for="type">Activity Type:</label>
    <textarea id="type" name="type" rows="1" cols="30" required></textarea>
    <br>
    <input type="submit" value="Submit">
</form>
